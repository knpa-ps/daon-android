<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:fillViewport="true"
    tools:context="kr.go.knpa.daon.ui.OfficerDetailActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/gap"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="기본정보"
                android:layout_marginBottom="@dimen/gap"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계급/이름"
                android:textColor="?android:attr/textColorHint"
                android:layout_marginBottom="@dimen/gap_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="의경 최영우"
                android:textStyle="bold"
                android:id="@+id/rank_name"
                android:layout_marginBottom="@dimen/gap"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소속"
                android:textColor="?android:attr/textColorHint"
                android:layout_marginBottom="@dimen/gap_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="경비국 경비과 경비3계"
                android:id="@+id/department"
                android:layout_marginBottom="@dimen/gap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="직책"
                android:textColor="?android:attr/textColorHint"
                android:layout_marginBottom="@dimen/gap_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="경비3계장"
                android:id="@+id/role"
                android:layout_marginBottom="@dimen/gap"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="연락처"
                android:layout_marginBottom="@dimen/gap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일반전화"
                android:textColor="?android:attr/textColorHint"
                android:layout_marginBottom="@dimen/gap_small"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gap">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="02-3150-1170"
                    android:layout_centerVertical="true"
                    android:id="@+id/phone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_call"
                    android:id="@+id/call_phone"
                    android:background="?attr/selectableItemBackground"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰"
                android:textColor="?android:attr/textColorHint"
                android:layout_marginBottom="@dimen/gap_small"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="02-3150-1170"
                    android:layout_centerVertical="true"
                    android:id="@+id/cellphone"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_send_now"
                    android:id="@+id/sms_phone"
                    android:background="?attr/selectableItemBackground"
                    android:layout_toLeftOf="@+id/call_cellphone"
                    android:layout_marginRight="@dimen/gap_small"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_call"
                    android:id="@+id/call_cellphone"
                    android:background="?attr/selectableItemBackground"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>
</ScrollView>
